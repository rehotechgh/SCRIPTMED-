                                                        <td>@obj.RegistrationDate</td>
                                                        <td>@obj.Surname</td>
                                                        <td>@obj.OtherNames</td>
                                                        <td>@obj.DOB</td>
                                                        <td>@obj.Age</td>
                                                        <td>@obj.Sex</td>
                                                        <td>@obj.MaritalStatus</td>
                                                        <td>@obj.Occupation</td>
                                                        <td>@obj.Religion</td>
                                                        <td>@obj.PostalAddress</td>
                                                        <td>@obj.HomeAddress</td>
                                                        <td>@obj.Telephone</td>
                                                        <td>@obj.Email</td>
                                                        <td>@obj.NameOfNearestRelative</td>
                                                        <td>@obj.ContactOfNearestRealtive</td>
                                                        <td>@obj.District</td>
                                                        <td>@obj.SubDistrict_Locality</td>
